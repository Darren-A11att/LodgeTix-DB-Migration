# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# PostgreSQL Direct Connection (if needed)
POSTGRES_HOST=your_postgres_host
POSTGRES_PORT=5432
POSTGRES_DATABASE=your_database_name
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# MongoDB Configuration (Migration Source)
# For MongoDB Atlas: Use the connection string from Atlas with <db_password> placeholder
# Example: mongodb+srv://username:<db_password>@cluster.mongodb.net/?retryWrites=true&w=majority
# For local MongoDB: mongodb://localhost:27017
MONGODB_URI=mongodb+srv://username:<db_password>@cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourApp
MONGODB_DATABASE=your_target_database_name
MONGODB_PASSWORD=your_password
MONGODB_USERNAME=your_username

# New MongoDB Database (Clean Database)
NEW_MONGODB_URI=mongodb+srv://username:<db_password>@cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourApp
NEW_MONGODB_DATABASE=your_clean_database_name
NEW_MONGODB_PASSWORD=your_password
NEW_MONGODB_USERNAME=your_username

# Migration Settings
BATCH_SIZE=1000
LOG_LEVEL=info

# Web Configuration
NEXT_PUBLIC_WEB_PORT=3005
NEXT_PUBLIC_API_URL=http://localhost:3006/api

# Resend Configuration (for email sending)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=invoices@yourdomain.com
RESEND_BCC_EMAIL=accounting@yourdomain.com